<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/comment_user_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/user_photo"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_user_name"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/comment_user_photo"
        android:layout_toEndOf="@+id/comment_user_photo" />

    <TextView
        android:id="@+id/comment_user_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text = "Comment"
        android:layout_alignBottom="@+id/comment_user_photo"
        android:layout_toRightOf="@+id/comment_user_photo"
        android:layout_toEndOf="@+id/comment_user_photo" />
</RelativeLayout>
